---
import HorizontalRow from "./horizontalRow.astro";
export interface Props {
  title: string;
  company: string;
  location: string;
  time: string;
  description: string;
}

const props = Astro.props;
---

<div
  class="col-auto row-auto mx-4 my-2 flex h-full flex-col rounded-xl border border-gray-600 p-4 text-center"
>
  <p class="text-lg font-bold">{props.title}</p>
  <HorizontalRow />
  <p class="text-sm">{props.company} - {props.location}</p>
  <p class="text-sm">{props.time}</p>

  <HorizontalRow />
  <p>{props.description}</p>
</div>
